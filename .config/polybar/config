[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

;label-mounted = %{F#2e99cd}%mountpoint%%{F-} : %{F#fff}%percentage_used%%
;label-mounted = ${colors.volume-system}
label-mounted = %mountpoint% : %{F#fff}%percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}
;label-mounted-background = ${colors.background}
label-mounted-foreground = #000
label-mounted-background = ${colors.size}
label-mounted-padding = 1

[module/home]
type = internal/fs
interval = 25

mount-0 = /home

;label-mounted = %{F#2e99cd}%{T4}[ao[m%{F-} :%{T-}%{F#fff} %percentage_used%%
;label-mounted = ${colors.volume-home} 
label-mounted = %{T4} [ao[m %{T-} :%{F#fff} %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}
;label-mounted-background = ${colors.background}
label-mounted-foreground = ${colors.background}
label-mounted-background = ${colors.size}
label-mounted-padding = 1

