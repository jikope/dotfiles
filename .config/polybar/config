[module/wlan]
type = internal/network
interface = wlp0s26f7u1
interval = 0.5

format-connected = <ramp-signal> <label-connected>
;format-connected-foreground = #1d1f21
label-connected-foreground = ${colors.right_text}
format-connected-background = ${colors.right_color}
format-connected-margin = 0

format-connected-padding = 2
label-connected = %{F#eee} %essid% %{F-}  %{F#eee} %upspeed% %{F-}  %{F#eee} %downspeed% 

format-disconnected = 

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.right_icon}

[module/eth]
type = internal/network
interface = enp2s0
interval = 0.5

format-connected-prefix = " "
